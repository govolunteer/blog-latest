      a.hover-purple(href='https://govolunteer.com/' + language + '/about')= t('navbar.about_us')

    #main
      block section
        nav.navbar.navbar-light.text-uppercase.small-header
          a.navbar-brand.d-none.d-md-block(href='https://govolunteer.com/' + language + '/')
            img(src='/images/logo-govolunteer.png', height='auto', width='114', alt='Govolunteer Logo')
          a.navbar-brand.d-block.d-md-none(href='https://govolunteer.com/' + language + '/')
            img(src='/images/logo-govolunteer-sm.png', height='auto', width='42', alt='Govolunteer Logo')
          .dropdown.show.ml-auto.mr-4
            a#dropdownMenuLink.dropdown-toggle.text-dark(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= language === 'de' ? 'DE' : 'EN'
            .dropdown-menu(aria-labelledby='dropdownMenuLink')
              a.dropdown-item(href='/de') de
              a.dropdown-item(href='/en') en
          span(style='font-size:30px;cursor:pointer', onclick='openNav()')
            svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='#4a4a4a' viewBox='0 0 24 24')
              path(d='M24 6h-24v-4h24v4zm0 4h-24v4h24v-4zm0 8h-24v4h24v-4z')

      main(role='main')
        //- BODY
        #body
          //- The content block should contain the body of your template's content
          block content


