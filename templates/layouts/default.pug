    #mySidenav.sidenav
      a.closebtn.font-weight-bold(href='javascript:void(0)', onclick='closeNav()') ×
      a.hover-purple(href='https://govolunteer.com/' + language + '/search')= t('navbar.search')
      a.hover-purple(href='https://govolunteer.com/' + language + '/organizers/first-project')= t('navbar.first_project')
